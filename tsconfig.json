{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,

    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["./src"],
  "exclude": ["./dist"],
}
